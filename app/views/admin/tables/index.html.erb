<h1>All the Details of Table </h1>
<%= link_to admin_posts_url, method: :get , class: "btn btn-secondary mb-2" do %>
  <i class="fa fa-arrow-left"></i>
<% end %>
<ul class="container-small list-group">
  <li class="list-group-item bg-primary text-white"><b>Table details of Restaurants</b></li>
  <% for i in 0..@tables.size-1 do %>
    <li class="list-group-item list-group-item-action row content">
      <%= link_to @restaurant[i].name, admin_table_url(id: @tables[i].id), :class=>"col-sm-8 login show mt-2" %>
      <%= link_to "Edit", edit_admin_table_url(id: @tables[i].id), :class=>"col-sm-2 btn btn-primary" %>
    </li>
  <% end %>
</ul>


