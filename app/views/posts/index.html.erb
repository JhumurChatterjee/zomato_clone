<h1>Your Account Details<h1>
<div class="card w-75">
  <div class="card-header">
    <h3 class="float-left">Welcome <%= current_user.username %></h3>
    
  </div>
  <div class="card-body">
    <% if @posts.blank? %>
      <h4>There are not any post by you currently in the system.</h4>
    <% else %>
      <h4>These are the current posts in our system uploaded by you</h4>
      <h5>Restaurant Name</h5>
      <ul>
        <% for i in 0..@posts.size-1 %>
          <li><%= link_to @restaurant[i].name, post_url(id: @posts[i].id), :class => "rest_name"%>
            <%= link_to 'Edit', {:action => 'edit', :id => @posts[i].id}, :class=>"rest_name link" %>
            <%= link_to 'DELETE', {:action => 'delete', :id => @posts[i].id}, :class=>"rest_name link", 
             data: { confirm: "Are you sure you want to delete this post?"} %>
          </li>
        <% end %>
      </ul>
    <% end %>
    <% if @reviews.blank? %>
      <h4>You have not reviewed any restaurant</h4>
    <% else %>
      <h5>You have reviewed these restaurants </h5>
      <ul>
        <% for i in 0..@reviews.size-1 %>
          <li> <%= link_to @restaurants[i].name, show_review_url(id: @reviews[i].id), :class=>"rest_name"  %>
            <%= link_to 'Edit',edit_review_url(id: @reviews[i].id,rest_id: @reviews[i].restaurant_id), :class=>"rest_name link" %>
            <%= link_to 'DELETE', review_url(id: @reviews[i].id),:method => 'delete',
              data: {:confirm => "Are you sure you want to delete this review?"}, :class=>"rest_name link"  %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
</div>



